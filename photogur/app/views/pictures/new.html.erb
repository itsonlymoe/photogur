<h1> Add a picture </h1>

<%= link_to "Back to Pictures", "/pictures" %>

<%= form_for @picture do |f| %>
  <p>
    <%= f.label "artist" %><br>
    <%= f.text_field "artist" %>
  </p>
  <p>
    <%= f.label "title" %><br>
    <%= f.text_field "title" %>
  </p>
  <p>
    <%= f.label "url" %><br>
    <%= f.text_field "url" %>
  </p>
  <p>
    <%= f.submit "Save" %> 
  </p>

  <p>
    <%= f.label "url" %><br>
  </p>

    <p>
    <% f.label "dafs" %><br />
    <!-- Upload file and invoke "load_photo_file" method in the Controller to process the upload file -->
    <%= f.file_field :load_photo_file %>
  	</p>

<% end %>